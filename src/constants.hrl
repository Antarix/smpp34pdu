% Bit 0 -> RX bit
% Bit 1 -> TX bit
% Bit 3 -> Open/Close flag (set is open, unset is closed)
% Bit 4 -> Unused.

% 0000 -> Closed, no tx, no rx -> CLOSED
% 0100 -> Open, no tx, no rx -> OPEN
% 0101 -> Open, no tx, rx -> BOUND_RX
% 0110 -> Open, tx, no rx -> BOUND_TX
% 0111 -> Open, tx, rx -> BOUND_TRX
% 0001 -> Closed, tx, rx, -> illegal
% 0010 -> Closed, tx, no rx, -> illegal
% 0011 -> Closed, tx, rx -> illegal

-define(CLOSED, 2#0000).
-define(BOUND_RX, 2#0101).
-define(BOUND_TX, 2#0110).
-define(BOUND_TRX,2#0111).
-define(OPEN, 2#0100).


